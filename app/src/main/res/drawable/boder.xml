<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:start = "10dp"
        android:end="10dp"
        android:top="10dp"
        android:bottom="10dp">
        <shape android:shape="rectangle">
            <stroke android:width="10dp"
                android:color = "#B8D7FF"/>
            <padding
                android:bottom = "10dp"
                android:top = "10dp"
                android:right = "10dp"
                android:left = "10dp"/>
